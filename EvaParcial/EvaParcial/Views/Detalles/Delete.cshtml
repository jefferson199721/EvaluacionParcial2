@model EvaParcial.Models.Detalle

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar Clientes y Distribuidores</h2>

<h3>Esta seguro que desea elimina...?</h3>
<div>
    <h4>Detalle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Clientes
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Clientes.idCliente)
        </dd>
        <dt>
           Distribuidores
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Distribuidores.idDistribuidor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idDetalle" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        
    </form>
</div>
