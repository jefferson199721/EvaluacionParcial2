@model IEnumerable<EvaParcial.Models.Pedidos>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Pedidos</h2>

<p>
    <a class="btn btn-primary" data-toggle="modal" data-target="#Ingreso_Pedido">Nuevo Pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Nombre del Corte
            </th>
            <th>
                Numero de Piezas
            </th>
            <th>
                PesoCarne
            </th>
        </tr>
    </thead>
    <tbody id="Cuerpo_Pedidos"></tbody>
</table>

<div class="modal fade" id="Ingreso_Pedido" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="EtiquetaModal">
                    Ingreso de Pedidos
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" name="idPedidos" id="idPedidos" />
                    <div class="form-group">
                        <label class="control-label">Fecha</label>
                        <input id="Fecha" name="Fecha" class="form-control"
                               type="date" placeholder="Ingrese la Fecha" />
                        <span class="label-danger hidden">Campo Obligatorio</span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Nombre del Corte</label>
                        <input id="NomCorte" name="NomCorte" class="form-control"
                               type="text" placeholder="Ingrese Nombre del Corte" />
                        <span id="control_corte" class="label-danger hidden">La direccion es requerida</span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Numero de Piezas</label>
                        <input id="NPiezas" name="NPiezas" class="form-control"
                               type="text" placeholder="Ingrese el Numero de Piezas" />
                        <span id="control_piezas" class="label-danger hidden">El Reseptor es requerido</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Peso de la carne</label>
                        <input id="PesoCarne" name="PesoCarne" class="form-control"
                               type="text" placeholder="Ingrese el Peso de la carne" />
                        <span id="control_carne" class="label-danger hidden">El Reseptor es requerido</span>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="">Cerrar</button>
                <button id="graba" type="button" class="btn btn-primary" onclick="nuevo_Pedido()">Guardar</button>
            </div>
        </div>
    </div>
</div>