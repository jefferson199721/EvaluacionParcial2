@model IEnumerable<EvaParcial.Models.RealizarPedido>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<br />
<br />
<h2>Realizar Pedidos</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Cliente
            </th>
            <th>
                Pedidos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedidos.NomCorte)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.idPedido">Editar</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.idPedido">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
