@model EvaParcial.Models.RealizarPedido

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
<br />
<h2>Realizar nuevo pedido</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="date"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCliente" class="control-label"></label>
                <select asp-for="idCliente" class="form-control" asp-items="ViewBag.idCliente"></select>
            </div>
            <div class="form-group">
                <label asp-for="idPedidos" class="control-label"></label>
                <select asp-for="idPedidos" class="form-control" asp-items="ViewBag.idPedidos"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
