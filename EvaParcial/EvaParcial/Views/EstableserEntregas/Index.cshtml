@model IEnumerable<EvaParcial.Models.EstableserEntrega>

@{
    ViewData["Title"] = "Index";
}

<h2>Estableser Entrega</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nueva Entrega</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Entrega
            </th>
            <th>
              Pedidos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Entrega.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedidos.NomCorte)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.idEsEntrega">Editar</a> |
                <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.idEsEntrega">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
